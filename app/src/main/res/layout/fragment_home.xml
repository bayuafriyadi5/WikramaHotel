<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bggradient"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="490dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="248dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/welcome_to_wikrama_hotel"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/kotak"
                    app:cardCornerRadius="10dp"
                    android:elevation="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/rubik_light"
                            android:text="Wikrama Hotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:background="#D3D3D3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:orientation="vertical"
                                android:layout_width="150dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/elip1"
                                    android:layout_marginTop="-5dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>

                                <ImageView
                                    android:src="@drawable/elip2"
                                    android:layout_marginTop="-5dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"/>

                                <ImageView
                                    android:src="@drawable/elip2"
                                    android:layout_alignParentBottom="true"
                                    android:rotation="180"
                                    android:layout_marginBottom="-5dp"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    />

                                <ImageView
                                    android:src="@drawable/elip1"
                                    android:rotation="180"
                                    android:layout_marginBottom="-5dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>
                                <ImageView
                                    android:id="@+id/foto_kamar"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginTop="75dp"
                                    android:layout_marginEnd="25dp"
                                    android:src="@drawable/sleep" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/foto_kamar"
                                    android:layout_marginTop="1dp"
                                    android:text="@string/wikrama_vocational_highshool"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <LinearLayout
                                android:background="#D3D3D3"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="200dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:fontFamily="@font/rubik_light"
                                    android:text="@string/description"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:textSize="10sp"
                                    android:fontFamily="@font/rubik_light"
                                    android:text="@string/hospitality_expertise_competencies_was_established_in_2017_and_is_the_7th_major_at_smk_wikrama_bogor"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="#444"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:fontFamily="@font/rubik_light"
                                    android:text="@string/skill"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:textSize="10sp"
                                    android:fontFamily="@font/rubik_light"
                                    android:text="@string/tourism_knowledge_telephone_operator_services_bellboy_porter_services_reservation_services_reception_services_financial_transaction_document_services_houskeeping_services_including_room_service_public_areas_and_loundry_laundry"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="#444"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"/>


                                <TextView
                                    android:fontFamily="@font/rubik_light"
                                    android:text="@string/facilities"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:textSize="10sp"
                                    android:fontFamily="@font/rubik_light"
                                    android:text="@string/special_theory_room_practicum_room_hotel_miniature"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginBottom="16dp"
                                    android:textColor="#444"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="25dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/type_room"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginTop="24dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintStart_toStartOf="@+id/kotak"
                            app:layout_constraintTop_toBottomOf="@+id/kotak">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_undraw_portfolio_website_lidw" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Wikrama Web"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toEndOf="@+id/type_room"
                            app:layout_constraintStart_toStartOf="@+id/type_room"
                            app:layout_constraintTop_toBottomOf="@+id/type_room" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout7"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/view_location"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginTop="24dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintEnd_toEndOf="@+id/kotak"
                            app:layout_constraintTop_toBottomOf="@+id/kotak">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_undraw_map_dark_k9pw" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="8dp"
                            android:text="@string/view_location"
                            android:textColor="@color/white" />


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/rubik_light"
                    android:text="@string/hotel_gallery"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/type_room"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginRight="8dp"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp">

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            android:layout_width="227dp"
                            android:layout_height="98dp">

                            <ImageView
                                android:id="@+id/kamar1"
                                android:layout_marginRight="24dp"
                                android:src="@drawable/sleep"
                                android:layout_width="227dp"
                                android:layout_height="98dp"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            android:layout_width="227dp"
                            android:layout_height="98dp">

                            <ImageView
                                android:id="@+id/kamar2"
                                android:layout_marginRight="24dp"
                                android:src="@drawable/ic_undraw_apartment_rent_o0ut"
                                android:layout_width="227dp"
                                android:layout_height="98dp"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            android:layout_width="227dp"
                            android:layout_height="98dp">

                            <ImageView
                                android:id="@+id/kamar3"
                                android:layout_marginRight="24dp"
                                android:src="@drawable/ic_undraw_apartment_rent_o0ut"
                                android:layout_width="227dp"
                                android:layout_height="98dp"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>